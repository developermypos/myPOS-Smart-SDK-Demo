<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android           ="http://schemas.android.com/apk/res/android"
    xmlns:tools             ="http://schemas.android.com/tools"
    android:layout_width    ="match_parent"
    android:layout_height   ="match_parent"
    tools:context           =".activities.MainActivity">

    <RelativeLayout
        android:layout_width    ="match_parent"
        android:layout_height   ="match_parent"
        android:paddingBottom   ="@dimen/activity_vertical_margin"
        android:paddingLeft     ="@dimen/activity_horizontal_margin"
        android:paddingRight    ="@dimen/activity_horizontal_margin"
        android:paddingTop      ="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:onClick="onClick"
            android:src="@drawable/settings_icon" />

        <TextView
            android:id              ="@+id/title"
            android:layout_width    ="wrap_content"
            android:layout_height   ="wrap_content"
            android:text            ="SMART SDK DEMO"
            android:textSize        ="24sp"
            android:textStyle       ="bold"
            android:layout_centerHorizontal="true"/>

        <ScrollView
            android:layout_width="200dip"
            android:layout_height="match_parent"

            android:layout_marginTop="15dip"
            android:layout_below    ="@+id/title"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width    ="200dip"
                android:layout_height   ="wrap_content"
                android:layout_below    ="@+id/terminal_connection_type"
                android:layout_centerHorizontal="true">


                <Button
                    android:id              ="@+id/purchase_btn"
                    android:layout_width    ="200dip"
                    android:layout_height   ="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text            ="Purchase"
                    android:onClick         ="onClick"
                    android:background      ="@drawable/button_selector"/>

                <Button
                    android:id              ="@+id/refund_btn"
                    android:layout_width    ="200dip"
                    android:layout_height   ="wrap_content"
                    android:layout_below    ="@+id/purchase_btn"
                    android:layout_marginTop="8dip"
                    android:layout_centerHorizontal="true"
                    android:text            ="REFUND"
                    android:onClick         ="onClick"
                    android:background      ="@drawable/button_selector"/>

                <Button
                    android:id              ="@+id/void_btn"
                    android:layout_width    ="200dip"
                    android:layout_height   ="wrap_content"
                    android:layout_below    ="@+id/refund_btn"
                    android:layout_marginTop="8dip"
                    android:layout_centerHorizontal="true"
                    android:text            ="VOID"
                    android:onClick         ="onClick"
                    android:background      ="@drawable/button_selector"/>

                <Button
                    android:id              ="@+id/moto_btn"
                    android:layout_width    ="200dip"
                    android:layout_height   ="wrap_content"
                    android:layout_below    ="@+id/void_btn"
                    android:layout_marginTop="8dip"
                    android:layout_centerHorizontal="true"
                    android:text            ="MOTO"
                    android:onClick         ="onClick"
                    android:background      ="@drawable/button_selector"/>

                <Button
                    android:id              ="@+id/preauth_btn"
                    android:layout_width    ="200dip"
                    android:layout_height   ="wrap_content"
                    android:layout_below    ="@+id/moto_btn"
                    android:layout_marginTop="8dip"
                    android:layout_centerHorizontal="true"
                    android:text            ="PRE-AUTHORIZATION"
                    android:onClick         ="onClick"
                    android:background      ="@drawable/button_selector"/>

                <Button
                    android:id              ="@+id/giftcard_btn"
                    android:layout_width    ="200dip"
                    android:layout_height   ="wrap_content"
                    android:layout_below    ="@+id/preauth_btn"
                    android:layout_marginTop="8dip"
                    android:layout_centerHorizontal="true"
                    android:text            ="GIFTCARDS"
                    android:onClick         ="onClick"
                    android:background      ="@drawable/button_selector"/>

                <Button
                    android:id              ="@+id/reprint_receipt_btn"
                    android:layout_width    ="200dip"
                    android:layout_height   ="wrap_content"
                    android:layout_below    ="@+id/giftcard_btn"
                    android:layout_marginTop="8dip"
                    android:layout_centerHorizontal="true"
                    android:text            ="REPRINT RECEIPT"
                    android:onClick         ="onClick"
                    android:background      ="@drawable/button_selector"/>

                <Button
                    android:id              ="@+id/print_receipt_btn"
                    android:layout_width    ="200dip"
                    android:layout_height   ="wrap_content"
                    android:layout_below    ="@+id/reprint_receipt_btn"
                    android:layout_marginTop="8dip"
                    android:layout_centerHorizontal="true"
                    android:text            ="PRINT TEXT"
                    android:onClick         ="onClick"
                    android:background      ="@drawable/button_selector"/>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id              ="@+id/progress_layout"
        android:layout_width    ="match_parent"
        android:layout_height   ="match_parent"
        android:background      ="#77000000"
        android:clickable       ="true"
        android:visibility      ="gone">

        <LinearLayout
            android:layout_width            ="220dip"
            android:layout_height           ="wrap_content"
            android:paddingTop              ="15dip"
            android:paddingBottom           ="15dip"
            android:orientation             ="vertical"
            android:layout_centerInParent   ="true"
            android:gravity                 ="center"
            android:background              ="@drawable/white_background">

            <ProgressBar
                android:id                      ="@+id/progress_bar"
                android:layout_width            ="wrap_content"
                android:layout_height           ="wrap_content"/>

            <TextView
                android:id                      ="@+id/progress_text"
                android:layout_width            ="match_parent"
                android:layout_height           ="wrap_content"
                android:layout_marginRight      ="10dip"
                android:layout_marginLeft       ="10dip"
                android:layout_marginTop        ="5dip"
                android:gravity                 ="center"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id                          ="@+id/version"
        android:layout_width                ="wrap_content"
        android:layout_height               ="wrap_content"
        android:layout_alignParentBottom    ="true"
        android:layout_alignParentRight     ="true"
        android:layout_marginRight          ="5dip"
        android:layout_marginBottom         ="5dip"
        android:text                        ="v. 1.0"/>

</RelativeLayout>
