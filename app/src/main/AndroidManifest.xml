<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mypos.mypospaymentdemo">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:name=".PosApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.AmountActivity" />
        <activity android:name=".activities.PaymentActivity" />
        <activity android:name=".activities.TipAmountActivity" />
        <activity android:name=".activities.MultiOperatorCodeActivity" />
        <activity android:name=".activities.ReferenceNumberActivity"></activity>
    </application>

</manifest>